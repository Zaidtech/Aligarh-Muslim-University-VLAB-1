<%- include ('./partials/header') %>
	<div>
		<div>
			<% if(currentUser.type=="Teacher" ){ %>
				<!-- only show the assignment by this teacher -->
				<form class="form-horizontal" action="/assignment" method="POST" enctype="multipart/form-data" >
				    <div class="form-group">
						<label for="subjectcode" class="col-sm-2 control-label"><b style="color: red">Subject</b></label>
						<div class="col-sm-10">
						<input type="text" id="subjectcode" placeholder="Enter Subject code" value="" name="subjectcode"
							required  class="form-control  ">
							</div>
					</div>
					<div class="form-group">
						<label for="topic" class="col-sm-2 control-label"><b style="color: red ">Topic</b></label>
						<div class="col-sm-10">
						<input type="text" id="topic" placeholder="Enter here" value="" name="topic" required
							style=" margin-bottom: 10px" class="form-control  ">
							</div>
					</div>
					<div class="form-group">
						<label for="marks_alloted" class="col-sm-3 control-label"><b style="color: red">Enter the total marks</b></label>
						<div class="col-sm-10">
						<input type="number" id="marks_alloted" name="marks_alloted" value="" rows="4" cols="90" min="0" max="100"
							placeholder="Write something here..." required
							style=" margin-bottom: 10px" class="form-control  ">
							</div>
					</div>
					<div class="form-group">
						<label for="last_date" class="col-sm-3 control-label"><b style="color: red">Enter the due date </b></label>
						<div class="col-sm-10">
						<input type="date" id="last_date" placeholder="Enter here" value="" name="last_date" required
							style=" margin-bottom: 10px" class="form-control  " />
							</div>
					</div>

					<div class="form-group">
						<span><label for="image"class="col-sm-3 control-label"><b style="color: red">Add Assignment</b></label>
							<div class="col-sm-10">
							<input type="file" id="image" name="image" value="" required class="form-control-file"  />
							</div>
						</span>
					</div>
					<div style="margin-left: 300px">
						<button type="submit" class="btn btn-success">
							Post Assignment
						</button>
					</div>
				</form>
			<%}%>
		</div>
		<% if(currentUser.type=="Student" ){ %>
		<div style="padding-top: 50px;"> 
			<h1>TO DO</h1>
		</div>
		<%}else{%>
		<div style="padding-top: 50px;"> 
			<h1>Assignment Assigned By You</h1>
		</div>
		<%}%>
		<!-- i need to list only the assignments created by this teacher -->
		<% items.forEach(function(assignment) { %>
			<div >
				<br />

				<hr class="w3-clear" />
				<h4 style="color: red">
					<%= assignment.topic %>(<%= assignment.subjectcode %>)
					
				</h4>
				<p style="color: green">
					Max Marks Alloted :-<%= assignment.marks_alloted %>
				</p>
				<p style="color: green">Due Date :-<%= assignment.last_date %>
				</p>
				
			
				<button  type="button" class="btn btn-primary" style="float:left; margin-right:40px;" >
					<i class="fa fa-comment"></i> Comment
				</button>
                 
					<form action="/download/<%= assignment._id %>" method="GET" >
						<button  type="submit" class="btn btn-success"style="float:left; margin-right:40px;">Download</button>
					</form>
          
				
			
				<a href="/assignment/<%=assignment._id %>" >
					<button  type="button" class="btn btn-danger" style="float:left" >View details</button>
					
				</a>
				
			</div>
			<% }) %>
		</div>
		<div style="text-align: center; padding-top: 500px;" >
			Copyright Â© 2021 Aligarh Muslim University Aligarh, India. </p>
		   </div>
		
	
	