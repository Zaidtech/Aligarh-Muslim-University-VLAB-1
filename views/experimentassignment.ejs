<%- include ('./partials/header') %>
<div>
	 <div>
	<form action="/assignment" method="POST" enctype="multipart/form-data"> 
		  <div> 
				<label for="subjectcode"><b style="color:red">Subject</b></label> 
				<input type="text" id="subjectcode" placeholder="Enter Subject code" value="" name="subjectcode" required style="margin-left:20px;margin-bottom:10px"> 
			</div> 
              <div> 
				<label for="topic"><b style="color:red">Topic</b></label> 
				<input type="text" id="topic" placeholder="Enter here" value="" name="topic" required style="margin-left:20px;margin-bottom:10px"> 
			</div> 
			<div> 
				<label for="marks_alloted"><b style="color:red">Enter the total marks</b></label> 
				
				<input  type="number" id="marks_alloted" name="marks_alloted" value="" rows="4" cols="90" placeholder="Write something here..." required style="margin-left:20px;margin-bottom:10px"> 
					
				
			</div>
		<div> 
				<label for="last_date"><b style="color:red">Enter the due date </b></label> 
				<input type="date" id="last_date" placeholder="Enter here" value="" name="last_date" required style="margin-left:20px;margin-bottom:10px"> 
			</div> 
		
		
			<div> <span><label for="image"><b style="color:red">Add Assignment</b></label> 
				<input type="file" id="image" name="image" value="" required> </span>
				
			</div>
				 <div style="margin-left:300px">
					  <button type="submit" class="w3-button w3-theme">  Post Assignment</button> 
				 </div>
             
				</form>
	    
			 
	</div>
		  <% items.forEach(function(assignment) { %> 
		   <div class="w3-container w3-card w3-white w3-round w3-margin"><br>
			   
           
			     <hr class="w3-clear">
			     <h4 style="color:red"><%= assignment.topic %>(<%= assignment.subjectcode %>)</h4>
			   <p style="color:green">
				 Max Marks Alloted :-<%= assignment.marks_alloted %> 
			   </p>
			   <p style="color:green">
				 Due Date :-<%= assignment.last_date %> 
			   </p>
			   <div class="w3-row-padding" style="margin:0 -16px">
				   <div class="w3-half">
					   <td><img src="<%= assignment.img %>" style="width:100px; height:100px;"></td>
                 
			   </div>
			   </div>
			
        <button type="button" class="w3-button w3-theme-d2 w3-margin-bottom"><i class="fa fa-comment"></i>  Comment</button> 
			   <button>
				    <form action="/download/<%= assignment._id %>" method="GET">  
                         <input type="submit" value="Download">  
                       </form>  
			   </button>
			   
			   <a href="/assignment/<%=assignment._id %>" class="w3-button w3-theme-d2 w3-margin-bottom">

	          View details


	        </a>
			   
			   <div>

	       

	      </div>
		</div>
		 <% }) %>  
		</div>
<%- include ('./partials/footer') %>

        
          
        
            
