<%- include ('./partials/header') %>
	<div>
		<div>
			
				<form class="form-horizontal" action="/quiz/addquiz/<%=quiznumber%>" method="post" >
					<div class="form-group">
						<label class="col-sm-2 control-label"><b style="color: red">Question</b></label>
						<textarea type="text" name="question"  placeholder="Type your question" 
						class="form-control  "	required style="margin-left: 20px; margin-bottom: 10px" rows="4" cols="90" ></textarea>
					</div>
					<div class="form-group">
						<label class="col-sm-3 control-label"><b style="color: red">Please enter your options:</b></label>
						
                        <input type="text"  placeholder="Type option1"  name="option1"
							required style="margin-left: 20px; margin-bottom: 10px" class="form-control  "/>
                            <input type="text"  placeholder="Type option2"  name="option2"
							required style="margin-left: 20px; margin-bottom: 10px" class="form-control  "/>
                            <input type="text"  placeholder="Type option3"  name="option3"
							required style="margin-left: 20px; margin-bottom: 10px" class="form-control  "/>
                            <input type="text"  placeholder="Type option4"  name="option4"
							required style="margin-left: 20px; margin-bottom: 10px" class="form-control  "/>
                    
					</div>
					<div>
						<label class="col-sm-3 control-label"><b style="color: red">Enter the correct option </b></label>

						<input type="number"  name="answer" 
							 required  min="1" max="4"
							style="margin-left: 20px; margin-bottom: 10px" class="form-control  "/>
					</div>
					
					<input type="submit" class="btn btn-success" value="Add Question" style="margin-left:500px; margin-bottom: 20px">
                
					
				</form>




			
		</div>
		
		</div>
	
	<%- include ('./partials/footer') %>